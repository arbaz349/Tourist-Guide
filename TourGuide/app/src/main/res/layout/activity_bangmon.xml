<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_layout"
        android:layout_marginVertical="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/infp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="1.Group of Monuments at Hampi"
            android:textSize="15dp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            app:srcCompat="@drawable/bm1" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The epitome of glorious architecture of the Vijayanagara Empire, The Group of Monuments at Hampi are listed among UNESCO World Heritage sites in India. Nestled along the Tungabhadra River, Hampi comprise of ruins that reveal incredible architecture, sculptures and stories of the bygone days, it is one of the famous historical monuments in Karnataka that you must visit." />

        <TextView
            android:id="@+id/mon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="#fff"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="2.Bangalore Palace"
            android:textStyle="bold"
            android:textSize="15dp"/>


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="231dp"
            app:srcCompat="@drawable/bm2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Located at Vasant Nagar, Bangalore Bangalore Palace was built by Rev. Garrett . The palace is owned by Mysore royal family, Srikanta Datta Narasimharaja Wadiyar. The palace have sprawling gardens and lawns which are used for public events including music concerts. There is also an amusement park called Fun World inside the palace complex." />

        <TextView
            android:id="@+id/hang"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="3.Tipu’s Palace"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="228dp"
            app:srcCompat="@drawable/bm3" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Also known as Tipu Sultan’s Summer Palace it is located at Chamrajpet Bangalore within the area of Bangalore Fort. The Palace was built only by Teak Wood in Indo-Islamic architecture and comprises of pillars with beautiful carvings. The palace is open from 10am to 6pm except Sundays." />

        <TextView
            android:id="@+id/shop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="#fff"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="4.Seshadri Iyer Memorial Hall"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            app:srcCompat="@drawable/bm4" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Located in the famous Cubbon park of Bangalore city Seshadri Iyer Memorial Hall is one of the most notable landmarks of this city built in 1915 AD. It is a circular classic European style building and houses the Karnataka’s State Central Library ." />

        <TextView
            android:id="@+id/rest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="5.Attara Kacheri"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="227dp"
            app:srcCompat="@drawable/bm5" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attara Kacheri now the Karnataka High Court is the colonial building which was built in 1864 A.D during British rule. Attara Kacheri is built with stone and brick with intense red hue in Gothic Style of architecture. It is also located inside the complex of Cubbon park "
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</ScrollView>